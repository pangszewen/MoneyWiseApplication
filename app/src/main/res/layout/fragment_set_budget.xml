                android:layout_gravity="center"
                android:backgroundTint="@color/transparent"
                android:fontFamily="@font/pt_sans"
                android:textSize="18dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutCommunicate"
            android:layout_width="371dp"
            android:layout_height="50dp"
            android:background="@drawable/circular_lightblue"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <Button
                android:id="@+id/buttonCommunicate"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:paddingTop="2dp"
                android:backgroundTint="@color/transparent"
                android:drawableTop="@drawable/small_smartphone_touch_screen_svgrepo_com" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/pt_sans"
                android:text="Communicate"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvBudgetCommunicate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="RM"
                android:fontFamily="@font/pt_sans"
                android:textSize="18dp"
                android:layout_marginLeft="107dp"/>

            <EditText
                android:id="@+id/ETBudgetCommunicate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="no set"
                android:layout_gravity="center"
                android:backgroundTint="@color/transparent"
                android:fontFamily="@font/pt_sans"
                android:textSize="18dp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutRecreation"
            android:layout_width="371dp"
            android:layout_height="50dp"
            android:background="@drawable/circular_lightblue"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <Button
                android:id="@+id/buttonRecreation"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:paddingTop="2dp"

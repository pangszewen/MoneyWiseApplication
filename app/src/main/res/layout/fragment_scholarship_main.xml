<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scholarship.ScholarshipMainFragment">

    <LinearLayout android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarToolbar"
            android:layout_height="70dp"
            android:layout_width="match_parent"
            app:contentInsetStart="0dp"
            style="@style/scho_main_rectangle_header_blue_grey"
            android:elevation="5dp"
            >
            <LinearLayout
                android:id="@+id/header_title"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView android:ellipsize="end"
                    android:id="@+id/txtScholarshipAndNews"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="115dp"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    style="@style/txtDonegalOneregular20_white"
                    android:text="Scholarship &amp; News"/>
                <ImageView android:id="@+id/imageSave"
                    android:gravity="end"
                    android:layout_height="32dp"
                    android:layout_width="32dp"
                    android:layout_marginStart="50dp"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription"
                    android:src="@drawable/img_bookmark_checked"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>


        <LinearLayout android:gravity="top"
            android:id="@+id/linearContent"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="-10dp">
            <FrameLayout android:gravity="start"
                android:id="@+id/frameFindScholarship"
                android:layout_height="174dp"
                android:layout_width="match_parent"
                style="@style/groupStyleblack">
                <ImageView android:id="@+id/imageMainPage"
                    android:layout_gravity="center"
                    android:layout_height="174dp"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription"
                    android:src="@drawable/img_image156"/>
                <LinearLayout
                    android:id="@+id/linearTextOnImage"
                    android:layout_gravity="top|start"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="32dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtFindscholarships"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        style="@style/txtPTSansregular21_sharp_blue"
                        android:text="Find scholarships"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtAchieveYourD"
                        android:layout_height="wrap_content"
                        android:layout_width="300dp"
                        android:singleLine="true"
                        style="@style/txtPTSansbold24_white"
                        android:text="and achieve your dreams"/>
                    <TextView android:gravity="start"
                        android:id="@+id/txtDescription"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="14dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="11dp"
                        android:layout_width="200dp"
                        style="@style/txtDonegalOneregular8_dark_grey"
                        android:text="Access financial aid to support your studies.
Explore our extensive collection of scholarship applications tailored to meet your specific needs."/>
                </LinearLayout>
            </FrameLayout>
            <LinearLayout android:layout_gravity="center"
                android:id="@+id/linearFindScholarships"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_width="380dp"
                android:orientation="horizontal">
                <ImageView android:id="@+id/imageScho"
                    android:layout_height="142dp"
                    android:layout_width="175dp"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription"
                    android:src="@drawable/img_image158"/>
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearFindSchoContent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="0.47"
                    android:layout_width="0dp"
                    android:orientation="vertical">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtFindScholarships"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        style="@style/txtPTSansregular14"
                        android:text="Find scholarships"/>

                    <TextView android:gravity="center_horizontal"
                        android:id="@+id/txtSchoDescription"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        style="@style/txtPTSansregular8_dark_grey"
                        android:text="Discover and compare university scholarships worldwide. Access a diverse collection of suitable scholarships from our expansive scholarship database."/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:ellipsize="end"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/btnFindMore"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingEnd="23dp"
                        android:paddingStart="24dp"
                        android:paddingTop="5dp"
                        android:singleLine="true"
                        android:textAllCaps="false"
                        style="@style/btnSolidRounded"
                        android:text="Find more"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_gravity="center"
                android:id="@+id/linearNews"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_width="380dp"
                android:orientation="horizontal">
                <LinearLayout android:gravity="center_horizontal"
                    android:id="@+id/linearNewsContent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="0.43"
                    android:layout_width="0dp"
                    android:orientation="vertical">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtNews"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        style="@style/txtPTSansregular14"
                        android:text="News"/>
                    <TextView android:gravity="center"
                        android:id="@+id/txtNewsDescription"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        style="@style/txtPTSansregular8_dark_grey"
                        android:text="Stay informed with the latest headlines and breaking news from around the world. Get concise, reliable updates covering diverse topics in real-time."/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:ellipsize="end"
                        android:layout_gravity="center"
                        android:id="@+id/btnSeeMore"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="19dp"
                        android:layout_width="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingEnd="25dp"
                        android:paddingStart="25dp"
                        android:paddingTop="5dp"
                        android:singleLine="true"
                        android:textAllCaps="false"
                        style="@style/btnSolidRounded"
                        android:text="See more"/>
                </LinearLayout>
                <ImageView android:id="@+id/imageNews"
                    android:layout_marginStart="8dp"
                    android:layout_height="142dp"
                    android:layout_width="175dp"                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription"
                    android:src="@drawable/img_image160"/>
            </LinearLayout>

            <LinearLayout android:id="@+id/linearBookmark"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_width="380dp"
                android:orientation="horizontal">
                <ImageView android:id="@+id/imageBookmark"
                    android:layout_height="142dp"
                    android:layout_width="175dp"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription"
                    android:src="@drawable/img_image162"/>
                <LinearLayout android:gravity="center_horizontal"
                    android:id="@+id/linearBookmarkContent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0.43"
                    android:layout_width="0dp"
                    android:orientation="vertical">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtBookmark"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        style="@style/txtPTSansregular14"
                        android:text="Bookmark"/>
                    <TextView android:gravity="center"
                        android:id="@+id/txtBookmarkDescription"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        style="@style/txtPTSansregular8_dark_grey"
                        android:text="Bookmark your scholarship and news. Organize and save valuable content to revisit or reference anytime, simplifying your browsing experience."/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:ellipsize="end"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/btnBookMark"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingEnd="23dp"
                        android:paddingStart="24dp"
                        android:paddingTop="5dp"
                        android:singleLine="true"
                        android:textAllCaps="false"
                        style="@style/btnSolidRounded"
                        android:text="Bookmark"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scholarship.ScholarshipMainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarToolbar"
            style="@style/scho_main_rectangle_header_blue_grey"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:elevation="5dp"
            app:contentInsetStart="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtScholarshipAndNews"
                    style="@style/txtDonegalOneregular25_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Scholarship &amp; News"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageSave"
                    android:layout_width="25dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_bookmark_checked"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:id="@+id/linearContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:gravity="top"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameFindScholarship"
                style="@style/groupStyleblack"
                android:layout_width="match_parent"
                android:layout_height="174dp">

                <ImageView
                    android:id="@+id/imageMainPage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_image156"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:id="@+id/linearTextOnImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtFindscholarships"
                        style="@style/txtPTSansregular21_sharp_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:singleLine="true"
                        android:text="Find scholarships" />

                    <TextView
                        android:id="@+id/txtAchieveYourD"
                        style="@style/txtPTSansbold24_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="and achieve your dreams" />

                    <TextView
                        android:id="@+id/txtDescription"
                        style="@style/txtDonegalOneregular10_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:layout_marginEnd="100dp"
                        android:text="Access financial aid to support your studies.
Explore our extensive collection of scholarship applications tailored to meet your specific needs." />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/linearFindScholarships"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageScho"
                    android:layout_width="175dp"
                    android:layout_height="142dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_image158"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:id="@+id/linearFindSchoContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.43"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtFindScholarships"
                        style="@style/txtPTSansbold14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="15dp"
                        android:singleLine="true"
                        android:text="Find scholarships" />

                    <TextView
                        android:id="@+id/txtSchoDescription"
                        style="@style/txtPTSansregular10_dark_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:text="Discover and compare university scholarships worldwide. Access a diverse collection of suitable scholarships from our expansive scholarship database." />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnFindMore"
                        style="@style/btnSolidRounded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:paddingStart="23dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="23dp"
                        android:paddingBottom="5dp"
                        android:singleLine="true"
                        android:text="Find more"
                        android:textAllCaps="false" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearNewsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0.43"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtNews"
                        style="@style/txtPTSansbold14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_gravity="start"
                        android:singleLine="true"
                        android:text="News" />

                    <TextView
                        android:id="@+id/txtNewsDescription"
                        style="@style/txtPTSansregular10_dark_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:text="Stay informed with the latest headlines and breaking news from around the world. Get concise, reliable updates covering diverse topics in real-time." />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSeeMore"
                        style="@style/btnSolidRounded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:paddingStart="23dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="23dp"
                        android:paddingBottom="5dp"
                        android:singleLine="true"
                        android:text="See more"
                        android:textAllCaps="false" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageNews"
                    android:layout_width="175dp"
                    android:layout_height="142dp"
                    android:layout_marginStart="8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_image160"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearBookmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageBookmark"
                    android:layout_width="175dp"
                    android:layout_height="142dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_image162"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:id="@+id/linearBookmarkContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.43"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtBookmark"
                        style="@style/txtPTSansbold14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_gravity="start"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Bookmark" />

                    <TextView
                        android:id="@+id/txtBookmarkDescription"
                        style="@style/txtPTSansregular10_dark_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Bookmark your scholarship and news. Organize and save valuable content to revisit or reference anytime, simplifying your browsing experience." />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnBookMark"
                        style="@style/btnSolidRounded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:paddingStart="23dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="23dp"
                        android:paddingBottom="5dp"
                        android:singleLine="true"
                        android:text="Bookmark"
                        android:textAllCaps="false" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
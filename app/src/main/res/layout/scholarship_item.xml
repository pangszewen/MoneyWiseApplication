<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/scholarshipCard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="100dp"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="5dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linearRowscholarship"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <ImageView android:id="@+id/imageScho"
            android:layout_height="100dp"
            android:layout_width="160dp"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription"
            tools:src="@drawable/img_schorecyclerview"/>

        <LinearLayout android:gravity="start"
            android:id="@+id/linearColumnscholarship"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0.52"
            android:layout_width="0dp"
            android:orientation="vertical">

            <TextView android:id="@+id/txtTitle"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                style="@style/txtPTSansbold11"
                tools:text="Scholarship title"/>

            <TextView android:ellipsize="end"
                android:id="@+id/txtDeadline"
                android:layout_height="12dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:singleLine="true"
                style="@style/txtPTSansregular8_blue"
                tools:text="Deadline:"/>

            <TextView android:ellipsize="end"
                android:id="@+id/txtGroupTwo"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_width="wrap_content"
                android:paddingBottom="4dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="2dp"
                android:singleLine="true"
                style="@style/txtRoundedOutline"
                android:text="Read More"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>